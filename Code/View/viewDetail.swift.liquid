import UIKit
import RxSwift

class {{ prefix }}{{ module_info.name }}View: UIView {

	var imageView: UIImageView!    
	var titleLabel: UILabel!
	var descrLabel: UILabel!
	var doneButton: UIButton!

	override init(frame: CGRect) {
		super.init(frame: frame)
		configureViews()
		configureConstraits()
	}
    
	required init?(coder aDecoder: NSCoder) {
		fatalError("init(coder:) has not been implemented")
	}
    
	
	private func configureViews() {
        	
	imageView = { let i = UIImageView()
            i.contentMode = .scaleAspectFit
            i.clipsToBounds = true
            return i
        }()

	titleLabel = { let i = UILabel()
            i.font = .mediumFont(size: 18)
            i.textColor = .white
            i.numberOfLines = 1
            return i
        }()
        
        descrLabel = { let i = UILabel()
            i.font = .regularFont(size: 12)
            i.textColor = UIColor(white: 1, alpha: 0.7)
            i.numberOfLines = 3
            return i
        }()

	doneButton = { let i = UIButton()
            return i
	}()
		

	addSubview(imageView)
	addSubview(titleLabel)
	addSubview(descrLabel)
	addSubview(doneButton)
	}

	private func configureConstraits() {
        	
		imageView.snp.makeConstraints{ (make) in
			make.top.equalTo(safeAreaLayoutGuide)
			make.left.right.equalTo(0)
		}

		titleLabel.snp.makeConstraints{ (make) in
			make.top.equalTo(imageView.snp.bottom)
			make.left.right.equalTo(0)
		}
	}
}
