import UIKit
import AsyncDisplayKit

class {{ prefix }}{{ module_info.name }}View: UIView {

	var tableNode: ASTableNode!

	override init(frame: CGRect) {
		super.init(frame: frame)
		configureViews()
		configureConstraits()
	}
    
	required init?(coder aDecoder: NSCoder) {
		fatalError("init(coder:) has not been implemented")
	}
    
	private func configureViews() {
		backgroundColor = .bgColor
        	
		tableNode = { let i = ASTableNode(style: .plain)
			i.view.separatorStyle = .none
			i.view.showsVerticalScrollIndicator = false
			i.view.backgroundColor = UIColor.clear
			return i
		}()
        
		addSubnode(tableNode)
	}

	private func configureConstraits() {
        	
		tableNode.frame = UIScreen.main.bounds
	}
}
