import UIKit
import RxSwift

class {{ prefix }}{{ module_info.name }}View: UIView {

	var collectionView: UICollectionView!
	var doneButton: UIButton!

	override init(frame: CGRect) {
		super.init(frame: frame)
		configureViews()
		configureConstraits()
	}
    
	required init?(coder aDecoder: NSCoder) {
		fatalError("init(coder:) has not been implemented")
	}
    
	private func configureViews() {
        	
		let layout = UICollectionViewFlowLayout()
		collectionView = { let i = UICollectionView(frame: .zero, collectionViewLayout: layout)
			i.showsVerticalScrollIndicator = false
			i.backgroundColor = UIColor.clear
			return i
		}()

		addSubview(collectionView)
	}

	private func configureConstraits() {
        	
		collectionView.snp.makeConstraints{ (make) in
			make.top.equalTo(safeAreaLayoutGuide)
			make.left.bottom.right.equalTo(0)
		}
	}
}
